<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import java.net.URL?>

<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.HBox?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.adventure.controllers.AppController" styleClass="stage">
  <stylesheets>
    <URL value="@../styles/menu.css" />
  </stylesheets>

  <VBox GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" styleClass="menu-container">

    <Label fx:id="welcomeText" styleClass="menu-label"/>
    <Button text="PLAY" onAction="#onHelloButtonClick" styleClass="menu-button" />
    <Button text="CREDITS" onAction="#onHelloButtonClick" styleClass="menu-button" />
    <Button text="QUIT" onAction="#onHelloButtonClick" styleClass="menu-button"/>
    <Button text="SAVE" onAction="#onHelloButtonClick" styleClass="menu-button"/>

  </VBox>
</GridPane>
